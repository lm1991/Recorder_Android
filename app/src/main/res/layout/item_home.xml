<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="400dp">

    <LinearLayout
        android:id="@+id/contentV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/contentImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:transitionName="content_image"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sectionV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_156"
        android:background="#fff">

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_35"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_28"
            android:layout_toRightOf="@+id/avatarImageView"/>

        <ImageView
            android:id="@+id/optionsV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_68"
            android:src="@android:drawable/ic_menu_edit"/>
    </RelativeLayout>

</FrameLayout>